<?xml version="1.0" encoding="UTF-8"?>
<!-- testing whether application is working in all browser-->
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="crossbrowser">
<!--listener class is used for report generation -->

  <test thread-count="5" name="ChromeTest">
  <parameter name="browsers" value="Chrome"></parameter>
    <classes>
      
      <class name="testscript.LoginTest"><methods><include name="verifyLoginWithValidCredentials()"></include></methods></class>
      <!--excude for exclude a test case, extend report - it is a coustomize detailed report-->
    </classes>
  </test> <!-- Test -->
   <test thread-count="5" name="FirefoxTest">
  <parameter name="browsers" value="Firefox"></parameter>
    <classes>
      
      <class name="testscript.LoginTest"><methods><include name="verifyLoginWithValidCredentials()"></include></methods></class>
      <!--excude for exclude a test case, extend report - it is a coustomize detailed report-->
    </classes>
   </test>
    <test thread-count="5" name="EdgeTest">
  <parameter name="browsers" value="Edge"></parameter>
    <classes>
      
      <class name="testscript.LoginTest"><methods><include name="verifyLoginWithValidCredentials()"></include></methods></class>
      <!--excude for exclude a test case, extend report - it is a coustomize detailed report-->
    </classes>
    </test>
</suite> <!-- Suite -->
